    <script>
        // Robust dark/light mode toggle for the entire page
        const toggle = document.getElementById('darkModeToggle');
        const icon = document.getElementById('darkModeIcon');
        const html = document.documentElement;
        const body = document.body;

        // SVGs for icons
        const moonSVG = '<svg width="20" height="20" fill="none" viewBox="0 0 24 24"><path fill="#181818" d="M21 12.79A9 9 0 0 1 12.79 3a7 7 0 1 0 8.21 9.79Z"/></svg>';
        const sunSVG = '<svg width="20" height="20" fill="none" viewBox="0 0 24 24"><circle cx="12" cy="12" r="5" fill="#FFA500"/><g stroke="#FFA500" stroke-width="2"><line x1="12" y1="1" x2="12" y2="3"/><line x1="12" y1="21" x2="12" y2="23"/><line x1="4.22" y1="4.22" x2="5.64" y2="5.64"/><line x1="18.36" y1="18.36" x2="19.78" y2="19.78"/><line x1="1" y1="12" x2="3" y2="12"/><line x1="21" y1="12" x2="23" y2="12"/><line x1="4.22" y1="19.78" x2="5.64" y2="18.36"/><line x1="18.36" y1="5.64" x2="19.78" y2="4.22"/></g></svg>';

        function setTheme(theme) {
            if (theme === 'dark') {
                html.classList.add('dark');
                body.classList.remove('light-mode');
                icon.innerHTML = sunSVG;
            } else {
                html.classList.remove('dark');
                body.classList.add('light-mode');
                icon.innerHTML = moonSVG;
            }
        }

        // Initial load
        let theme = localStorage.getItem('theme');
        if (!theme) {
            theme = 'dark';
            localStorage.setItem('theme', 'dark');
        }
        setTheme(theme);

        toggle.addEventListener('click', () => {
            let current = html.classList.contains('dark') ? 'dark' : 'light';
            let next = current === 'dark' ? 'light' : 'dark';
            setTheme(next);
            localStorage.setItem('theme', next);
        });
    </script>
